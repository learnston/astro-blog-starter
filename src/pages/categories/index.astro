---
import Layout from '../../layouts/Layout.astro';
const allPosts = await Astro.glob('../posts/*.mdx');
const categories = [...new Set(allPosts.map((post) => post.frontmatter.categories).flat())];
const pageTitle = 'Welcome to categories';
---

<Layout title={pageTitle}>
	<h1>{pageTitle}</h1>
	<div class="categories">
		{
			categories.map((tag) => (
				<p class="tag">
					<a href={`/categories/${tag}`}>{tag}</a>
				</p>
			))
		}
	</div>
</Layout>
<style>
	h1 {
		color: #fff;
	}

	a {
		color: #00539f;
		text-decoration: underline;
	}

	.categories {
		display: flex;
		flex-wrap: wrap;
		margin: 0 auto;
	}

	.tag {
		margin: 0.25em;
		border: dotted 1px #a1a1a1;
		border-radius: 0.5em;
		padding: 0.5em 1em;
		font-size: 1.15em;
		background-color: #f8fcfd;
	}
</style>
